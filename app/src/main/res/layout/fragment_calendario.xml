<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danielsanso.favyourfragments.MainActivity"
    android:orientation="vertical"
    style="@style/AppTheme.PopComentario">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"

        android:id="@+id/cardView"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center_horizontal"
        android:transitionName="cardShareTrans"
        android:background="@drawable/cardlogin"
        android:backgroundTint="@color/colorLight2"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="@color/textColorPrimary"
                android:text="Reserva tu instalaciÃ³n"
                android:layout_gravity="center_horizontal"
                tools:layout_editor_absoluteY="28dp"
                tools:layout_editor_absoluteX="49dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="6dp"
                android:fontFamily="casual"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:transitionName="titleShareTrans"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinerInstalacion"
                    android:layout_marginTop="5dp"></Spinner>

                <Button
                    android:id="@+id/buttonEnviar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/button_registerappereance"
                    android:text="Reservar"
                    android:transitionName="butSignShareTrans"
                    tools:layout_editor_absoluteX="148dp"
                    tools:layout_editor_absoluteY="311dp"

                    />
            </LinearLayout>

            <TextClock
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:id="@+id/Cal"

                ></CalendarView>






        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        android:src="@drawable/ic_cross"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:transitionName="butPlusShareTrans"
        />

</RelativeLayout>